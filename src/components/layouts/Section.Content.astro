---
import Grid from '@/components/ui/Grid.astro';
import SectionDiv from '@/components/ui/Section.astro'
import Divider from "@/components/ui/Divider.astro";
import SlideUpDiv from "@/components/ui/SlideUpDiv.astro";
---

<SectionDiv class:list={["ContentSection"]}>
    <Divider />
    <Grid columns={4} class:list={["ContentGrid"]}>
        <SlideUpDiv class:list={["ContentContainer"]}>
            <slot name="header"/>
        </SlideUpDiv>
        <slot/>
    </Grid>
</SectionDiv >

<style>
.ContentSection {
    background-color: rgb(var(--color-default-background));
}

.ContentContainer {
    position: sticky;
    top: var(--size-header-height);
    padding-bottom: var(--spacing-paragraph);
    grid-column: "span 1 / span 1"
}

.ContentGrid {
    padding-bottom: var(--spacing-component);
    padding-top: var(--spacing-component);
}
</style>