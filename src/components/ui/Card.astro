---
import type { HTMLAttributes } from "astro/types";
import type { HTMLAttributeAnchorTarget } from "react";
import SlideUpDiv from "@/components/ui/SlideUpDiv.astro";

interface Props extends HTMLAttributes<"div"> {
    href: string;
    target?: HTMLAttributeAnchorTarget;
    occupiedColumns?: number;
    occupiedRows?: number;
}

const {
    href,
    target,
    occupiedColumns = 1,
    occupiedRows = 1,
    class: className,
    ...others
} = Astro.props;
---

<a href={href} target={target} class:list={["OutlinedCard"]}>
    <SlideUpDiv class:list={[className]} {...others}>
        <slot/>
    </SlideUpDiv>
</a>

<style define:vars={{ 
    "card-columns": occupiedColumns, 
    "card-rows": occupiedRows 
}}>
.OutlinedCard {
    width: 100%;
    height: 100%;
    
    grid-column: span var(--card-columns);
    grid-row: span var(--card-rows);
    
    > div {
        position: relative;
        width: 100%;
        height: 100%;
        overflow: hidden;
        border-radius: var(--size-border-radius);
        box-sizing: border-box;

        padding: var(--spacing-paragraph);
        border: .5px rgb(var(--color-default-foreground) / .25) solid;
        background-color: rgb(var(--color-default-foreground) / 0);
        
        transition: all var(--transition-short);
        
        &:hover {
            border: .5px rgb(var(--color-default-foreground) / .5) solid;
            background-color: rgb(var(--color-default-foreground) / .15);
        }
    }
}
</style>
