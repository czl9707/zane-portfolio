---
import type { HTMLAttributes } from "astro/types";
import type { HTMLAttributeAnchorTarget } from "react";
import SlideUpDiv from "@/components/ui/SlideUpDiv.astro";

interface Props extends HTMLAttributes<"div"> {
    href: string;
    target?: HTMLAttributeAnchorTarget;
}

const {
    href,
    target,
    class: className,
    ...others
} = Astro.props;
---

<a href={href} target={target} class:list={["OutlinedCard"]}>
    <SlideUpDiv class:list={[className]} {...others}>
        <slot/>
    </SlideUpDiv>
</a>

<style>
.OutlinedCard {
    width: 100%;
    height: 100%;

    @media(--smaller-than-md) {
        grid-column: span 1;
        grid-row: span 1;
    }
    
    > div {
        position: relative;
        width: 100%;
        height: 100%;
        overflow: hidden;
        border-radius: var(--size-border-radius);
        box-sizing: border-box;

        padding: var(--spacing-paragraph);
        border: var(--border-secondary);
        background-color: rgb(var(--color-primary-foreground) / 0);
        
        transition: all var(--transition-short);
        
        &:hover {
            border: var(--border);
            background-color: rgb(var(--color-primary-foreground) / .15);
        }
    }
}
</style>
